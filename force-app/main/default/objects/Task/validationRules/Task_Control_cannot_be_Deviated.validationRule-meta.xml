<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Task_Control_cannot_be_Deviated</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(Status) &amp;&amp; ISPICKVAL(Status, &quot;Completed&quot;) &amp;&amp; ISPICKVAL(Task_Control__c, &quot;Deviated&quot;)</errorConditionFormula>
    <errorMessage>Task Control cannot be Deviated when setting this Task to Completed.</errorMessage>
</ValidationRule>
